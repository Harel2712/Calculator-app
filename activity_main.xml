<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#2e3542"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	
	>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20px"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="50sp"
        android:hint="0"
        android:id="@+id/txt1"

		 />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_margin="25px"
        android:hint="0"
        android:id="@+id/txt2"

		 />
    <Button
        android:backgroundTint="#faa507"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AC"
        android:textSize="30dp"
        android:id="@+id/btnac"
    />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
	>
        <Button
            android:backgroundTint="@android:color/black"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="7"
            android:textSize="40dp"
            android:id="@+id/btn7"
            
    />
        <Button
            android:backgroundTint="@android:color/black"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="8"
            android:textSize="40dp"
            android:id="@+id/btn8"
    />
        <Button
            android:backgroundTint="@android:color/black"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="9"
            android:textSize="40dp"
            android:id="@+id/btn9"
    />
        <Button
            android:backgroundTint="#6c5cfa"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="/"
            android:textSize="40dp"
            android:id="@+id/btnh"
    />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
	>
        <Button
            android:backgroundTint="@android:color/black"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="4"
            android:textSize="40dp"
            android:id="@+id/btn4"
    />
        <Button
            android:backgroundTint="@android:color/black"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="5"
            android:textSize="40dp"
            android:id="@+id/btn5"
    />
        <Button
            android:backgroundTint="@android:color/black"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="6"
            android:textSize="40dp"
            android:id="@+id/btn6"
    />
        <Button
            android:backgroundTint="#6c5cfa"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="X"
            android:textSize="35dp"
            android:id="@+id/btnx"
    />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
	>
        <Button
            android:backgroundTint="@android:color/black"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="1"
            android:textSize="40dp"
            android:id="@+id/btn1"
		
    />
        <Button
            android:backgroundTint="@android:color/black"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="2"
            android:textSize="40dp"
            android:id="@+id/btn2"
    />
        <Button
            android:backgroundTint="@android:color/black"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="3"
            android:textSize="40dp"
            android:id="@+id/btn3"
    />
        <Button
            android:backgroundTint="#6c5cfa"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="-"
            android:textSize="40dp"
            android:id="@+id/btnm"
    />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
	>
        <Button
            android:backgroundTint="#0c0075"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="COS"
            android:textSize="30dp"
            android:id="@+id/btnc"
            android:layout_marginTop="-4dp" 
    />
        <Button
            android:backgroundTint="@android:color/black"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="0"
            android:textSize="40dp"
            android:id="@+id/btnf"
    />
        <Button
            android:backgroundTint="#0c0075"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="."
            android:textSize="40dp"
            android:id="@+id/btnd"
    />
        <Button
            android:backgroundTint="#6c5cfa"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="+"
            android:textSize="40dp"
            android:id="@+id/btnp"
    />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
	>
       
        <Button
            android:backgroundTint="#0c0075"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="SIN"
            android:textSize="30dp"
            android:id="@+id/btns"
    />
        <Button
            android:backgroundTint="#0c0075"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="TAN"
            android:textSize="30dp"
            android:id="@+id/btnt"
    />
        <Button
            android:backgroundTint="#faa507"
            android:layout_width="204.8dp"
            android:layout_height="100.0dp"
            android:text="="
            android:textSize="30dp"
            android:id="@+id/btne"
            android:layout_marginTop="0.0dp"
            android:layout_marginRight="98.4dp"
            android:layout_marginLeft="0.0dp" 
    />
    </LinearLayout>





</LinearLayout>